
@{
    ViewBag.Title = "Distribute";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Distribute</h2>
<p class="alert-danger">@ViewBag.Error</p>
<div>
    @if (ViewBag.DistributeUpdated == true)
    {
        <p><font color="green"> Database updated! </font></p>
    }
</div>
@using (Html.BeginForm())
{
    <h4>Package Id:</h4>
    <h6>Barcode Scan: </h6>
    <input type="text" name="packageIdBarcode" />
    <br />
    <h6>List of Items: </h6>
    @Html.DropDownList("packageIdDropdown", (IEnumerable<SelectListItem>)ViewBag.Packages)
    <br />
    <br />
    <input type="submit" value="Distribute" name="Distribute" />
}