
@{
    ViewBag.Title = "Receive";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Receive</h2>

<div>
    @if (ViewBag.ReceiveUpdated == true)
    {
        <p><font color="red"> Database updated! </font></p>
    }
</div>
@using (Html.BeginForm())
{
    <h4>Package Id:</h4>
    <h6>Barcode Scan: </h6>
    <input type="text" name="packageIdBarcode" />
    <br />
    <h6>List of Items: </h6>
    @Html.DropDownList("packageIdDropdown", (IEnumerable<SelectListItem>)ViewBag.Packages)
    <br />
    <br />
    <input type="submit" value="Receive" name="Receive" />
}