@model ENET_Care.Data.AspNetUser
@{
    ViewBag.Title = "MyInformation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>MyInformation</h2>

<div>
    @if (ViewBag.Updated == true)
    {
        <p><font color="red"> Database updated! </font></p>
    }
</div>
@using (Html.BeginForm())
{
    <h4>@Html.LabelFor(m => m.FirstName)</h4>
    @Html.TextBoxFor(m => m.FirstName)
    <br />

    <h4>@Html.LabelFor(m => m.LastName)</h4>
    @Html.TextBoxFor(m => m.LastName)

    <br />

    <h4>@Html.LabelFor(m => m.Email)</h4>
    @Html.TextBoxFor(m => m.Email)

    <br />

    <h4>Dist. Centre</h4>
    if (ViewBag.DistCentreEdit == true)
    {
        @Html.DropDownListFor(m => m.CentreId, (IEnumerable<SelectListItem>)ViewBag.DistCentres)
    }
    else
    {
        @Html.DropDownListFor(m => m.CentreId, (IEnumerable<SelectListItem>)ViewBag.DistCentres, new { @disabled = "disabled" })
    }
    <br /><br />
    <!--Deleted Change Password Handled by Identity Framework-->
    <input type="reset" value="Cancel" runat="server" />
    <input type="submit" value="Save" runat="server" />
}
